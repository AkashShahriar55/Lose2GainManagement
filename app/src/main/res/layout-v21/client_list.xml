<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="4dp">

    <LinearLayout
        android:id="@+id/item_secondary_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/client_img"
            android:layout_width="99dp"
            android:layout_height="100dp"
            android:paddingTop="1dp"
            android:paddingStart="2dp"
            android:paddingEnd="0dp"
            android:scaleType="centerInside"
            android:contentDescription="@string/todo">
        </ImageView>

        <LinearLayout

            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/client_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                </TextView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/priority_card"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:cardCornerRadius="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center">

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/client_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comma"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp">
                </TextView>
                <TextView
                    android:id="@+id/client_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp">
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/client_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next_follow_up_date">

                </TextView>
                <TextView
                    android:id="@+id/client_next_followup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_follow_up_date">

                </TextView>
                <TextView
                    android:id="@+id/client_last_followup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">

        <ImageButton
            android:id="@+id/item_call"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_local_phone_black_24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/item_call_background">

        </ImageButton>
        <ImageButton
            android:id="@+id/item_add_circle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/item_ad_circle_background">
        </ImageButton>

        <ImageButton
            android:id="@+id/item_delete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_delete_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:background="@drawable/item_delete_background">

        </ImageButton>

    </LinearLayout>



</LinearLayout>